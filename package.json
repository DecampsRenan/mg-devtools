{
  "name": "mg-tools",
  "displayName": "MG Developer",
  "version": "0.1.0",
  "description": "MG Developer tools",
  "author": "Renan Decamps <renan.decamps@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "plasmo dev",
